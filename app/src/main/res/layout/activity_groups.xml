                android:padding="10dp"
                android:text="0"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:text="4"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/team4"
                android:layout_width="120dp"
