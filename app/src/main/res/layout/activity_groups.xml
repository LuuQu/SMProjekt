                android:layout_height="60dp"
                android:padding="8dp"
                android:text="Team"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:text="Pts"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:text="W"
                android:textColor="@color/white" />

            <TextView
